<?xml version="1.0"?>
<info xmlns:xsi= "http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="https://apps.nextcloud.com/schema/apps/info.xsd">
    <id>secsignid</id>
    <name>SecSign ID</name>
    <summary>Plugin to enable use of SecSign 2FA</summary>
    <description><![CDATA[This Plugin allow you to authenticate yourself 
    and your users using SecSign two-factor authentication. 
    
    To use the SecSign 2FA, simply create a [SecSign ID](https://www.secsign.com/try-secsign-id-now/),
    link it to your NextCloud via the settings and you're done.]]></description>
    <version>0.0.15</version>
    <licence>agpl</licence>
    <author mail="bjoern@secsign.com" >Björn Plüster</author>
    <namespace>SecSignID</namespace>
    <category>security</category>
    <bugs>https://jirasecsignidplugin.seccommerce.biz/issues/</bugs>
    <dependencies>
        <nextcloud min-version="11" max-version="15"/>
    </dependencies>
     <two-factor-providers>
        <provider>OCA\SecSignID\Provider\SecSign2FA</provider>
    </two-factor-providers>
    <settings>
        <personal>OCA\SecSignID\Settings\security</personal>
    </settings>
    <navigations>
        <navigation role="admin">
            <name>SecSign ID</name>
            <route>secsignid.page.index</route>
        </navigation>
    </navigations>
</info>
